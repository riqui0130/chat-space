.SideBar
  .LeftHeader 
    .LeftHeader__list
      %h3.LeftHeader__list__userName
        = current_user.name
      %ul.LeftHeader__list__iconList
        %li.LeftHeader__list__iconList__edit-user
          = link_to "#" do
            = icon('fas', 'edit')
        %li.LeftHeader__list__iconList__new-group
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .GroupList
    - current_user.groups.each do |group|
    .Group
      = link_to group_messages_path(group) do
        .Group__groupname
          = group.name
        .Group__groupmessage
          = group.show_last_message